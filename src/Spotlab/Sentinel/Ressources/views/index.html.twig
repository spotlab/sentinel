<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="LÃ©o POIROUX | Spotlab | {{ parameters.company }}">
    <meta http-equiv="refresh" content="3600">
    <link rel="icon" href="{{ app.request.basepath }}/img/favicon.ico">

    <title>{{ title }} | {{ parameters.company }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ app.request.basepath }}/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Roboto:300,500,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="{{ app.request.basepath }}/css/main.less" rel="stylesheet/less" type="text/css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">

            <div class="col-md-2 sidebar">
                <header class="brand">
                    <h1>{{ title }}</h1>
                    <p class="company">by {{ parameters.company }}</p>
                </header>

                <nav class="nav">
                    <div class="panel-home">
                        <a href="{{ app.request.basepath }}/" class="{% if uri == '/' %}active{% endif %}">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            Tableau de bord
                        </a>
                    </div>

                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        {% for key, project in projects %}
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="heading{{ key }}">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ key }}" aria-expanded="true" aria-controls="collapse{{ key }}">
                                        {{ project.title }}
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                <ul>
                                    {% for subkey, subproject in project.projects %}
                                    {% set path = '/' ~ key ~ '/' ~ subkey %}
                                    <li class="{% if uri == path %}active{% endif %}"><a href="{{ app.request.basepath }}{{ path }}">{{ subproject.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </nav>
            </div>

            <div class="col-md-10 main">
                <header>
                    <h2 class="page-title">
                        {% if uri == '/' %}
                            Tableau de bord
                        {% else %}

                        {% endif %}
                    </h2>
                </header>

                <div class="row">
                {% for key, project in projects %}
                    {% for subkey, subproject in project.projects %}
                        <div class="col-md-4 status-badge" data-path="{{ app.request.basepath }}/api/average/{{ key }}/{{ subkey }}" data-project="{{ project.title }}" data-subproject="{{ subproject.title }}"></div>
                    {% endfor %}
                {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; {{ "now"|date("Y") }} {{ title }} by {{ parameters.company }}</p>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <script src="{{ app.request.basepath }}/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="{{ app.request.basepath }}/bower_components/less/dist/less.min.js"></script>
    <script src="{{ app.request.basepath }}/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="{{ app.request.basepath }}/bower_components/lodash/lodash.min.js"></script>
    <script src="{{ app.request.basepath }}/bower_components/moment/min/moment-with-locales.min.js"></script>
    <script src="{{ app.request.basepath }}/bower_components/highstock-release/highstock.js"></script>
    <!-- <script src="{{ app.request.basepath }}/js/scripts.js"></script> -->
</body>
</html>
